<div class="modal fade" id="updateAdminModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="updateModalLabel">Edit User</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form name="aEditForm">
				<div class="modal-body">
					<div class="form-group">
						<label for="aEditEmail">Email</label>
						<input id="aEditEmail" type="email" class="form-control" name="email" placeholder="Email"
							   onchange="checkEmailAvailability(this.value, 'aEmailUpdateAvailabilityAlert', this.dataset.originalEmail)">
					</div>
					<div id="aEmailUpdateAvailabilityAlert" class="alert alert-danger fade collapse" role="alert"></div>
					<div class="form-group" hidden>
						<label for="auid">Id</label>
						<input id="auid" type="number" class="form-control" name="uid" placeholder="uid">
					</div>
					<div class="form-group">
						<div id="updateAdminWarning" class="alert alert-danger fade collapse" role="alert">
							This is a danger alert—check it out!
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary" data-target="#updateAdminModal" onclick="updateUser(null,null, aEditEmail.value, aEditEmail.dataset.originalEmail, auid.value,'updateAdminWarning','admin')">Save</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>