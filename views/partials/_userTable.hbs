<thead>
	<tr>
		<th scope="col">Id</th>
		<th scope="col">First Name</th>
		<th scope="col">Last Name</th>
		<th scope="col">Registration Date</th>
		{{#if normalUser}}
		<th scope="col">Signature</th>
		{{/if}}
		<th scope="col">Action</th>
	</tr>
</thead>
<tbody>
	{{#if normalUser}}
	{{#each data}}
	<tr id="userRow_{{u_id}}">
		<td scope="col">{{u_id}}</td>
		<td scope="col">{{fname}} {{lname}}</td>
		<td scope="col">{{email}}</td>
		<td scope="col">{{creation_datetime}}</td>
		<td scope="col">{{signature}}</td>
		<td scope="col">
			<button type="button" class="btn btn-outline-warning  m-sm-1">Edit</button>
			<form method="POST" action="/admin/delete/{{u_id}}?_method=DELETE">
				<button type="submit" class="btn btn-outline-danger  m-sm-1" >Delete</button>
			</form>
		</td>
	</tr>
	{{/each}}
	{{else}}
	{{#each data}}
	<tr id="userRow_{{u_id}}">
		<td scope="col">{{u_id}}</td>
		<td scope="col">{{fname}} {{lname}}</td>
		<td scope="col">{{email}}</td>
		<td scope="col">{{creation_datetime}}</td>
		<td scope="col"><button type="button" class="btn btn-outline-warning  m-sm-1">Edit</button><button type="button" class="btn btn-outline-danger  m-sm-1">Delete</button></td>
	</tr>
	{{/each}}
	{{/if}}
</tbody>