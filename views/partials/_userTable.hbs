<thead>
	<tr>
		<th scope="col">Id</th>
		<th scope="col">First Name</th>
		<th scope="col">Last Name</th>
		<th scope="col">Registration Date</th>
		{{#if normalUser}}
		<th scope="col">Signature</th>
		{{/if}}
		<th scope="col">Action</th>
	</tr>
</thead>
<tbody>
	{{#if normalUser}}
	{{#each data}}
	<tr id="userRow_{{u_id}}">
		<td scope="col">{{u_id}}</td>
		<td scope="col">{{fname}} {{lname}}</td>
		<td scope="col">{{email}}</td>
		<td scope="col">{{creation_datetime}}</td>
		<td scope="col"><img width="150" height="75" src="{{signature}}" alt="" /></td>
		<td scope="col">
			<button type="button" class="btn btn-outline-warning  m-sm-1 btn-block" data-toggle="modal"
						data-target="#updateModal"
						data-lname="{{lname}}"
						data-fname="{{fname}}"
						data-email="{{email}}"
						data-uid="{{u_id}}">
					Edit
			</button>
			<button type="button" class="btn btn-outline-danger m-sm-1 btn-block" onclick="deleteUser({{u_id}},'userRow_{{u_id}}')">Delete</button>
		</td>
	</tr>
	{{/each}}
	{{else}}
	{{#each data}}
	<tr id="userRow_{{u_id}}">
		<td scope="col">{{u_id}}</td>
		<td scope="col">{{fname}} {{lname}}</td>
		<td scope="col">{{email}}</td>
		<td scope="col">{{creation_datetime}}</td>
		<td scope="col">
			<div>
				<button type="button" class="btn btn-outline-warning m-sm-1 btn-block" data-toggle="modal"
						data-target="#updateModal"
						data-lname="{{lname}}"
						data-fname="{{fname}}"
						data-email="{{email}}"
						data-uid="{{u_id}}">
					Edit
				</button>
				<button type="button" class="btn btn-outline-danger m-sm-1 btn-block" onclick="deleteUser({{u_id}},'userRow_{{u_id}}')">Delete</button>
			</div>
		</td>
	</tr>
	{{/each}}
	{{/if}}
</tbody>

